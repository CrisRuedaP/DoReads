<div class="card column is-4">
  <div class="card-image">
    <% if book.thumbnail.attached? %>
      <figure class="image is-4by3">
        <%= image_tag(url_for(book.thumbnail)) %>
      </figure>
    <%end%>
  </div>

  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><%= link_to( book.title, book_path(book))%></p>
        <p class="subtitle is-6"><%= book.author %> - <%= book.description %></p>
      </div>
    </div>
  </div>
</div>