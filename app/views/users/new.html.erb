
<div class="form-layout">
  <h1 class="title">Crea tu cuenta</h1>
  <%= form_for @user, builder: BulmaFormBuilder, local: true, data: { turbo: false } do |f| %>

    <%= f.form_error %>

    <div class="field">
      <%= f.label :name, class: "label" %>
      <div class="control">
        <%= f.text_field :name, class: "input" %>
      </div>
      <%= f.field_error :name %>
    </div>

    <div class="field">
      <%= f.label :email, class: "label"  %>
      <div class="control">
        <%= f.text_field :email, class: "input is-normal" %>
      </div>
      <%= f.field_error :email %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label"  %>
      <div class="control">
        <%= f.password_field :password, class: "input is-normal" %>
      </div>
      <%= f.field_error :password %>
    </div>

    <%= f.submit class: "button btn-color"%><br>
  <% end %>
</div>