<%= form_for @user, local: true, data: { turbo: false } do |f| %>

  <%- if @user.errors.any? %>
    <div class="notification is-danger">
      ¡Parece que algo salió mal!
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input is-rounded" %>
    </div>
    <%- if @user.errors[:name].any? %>
      <div class="help is-danger">
        <%= @user.errors[:name].first %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email, class: "label"  %>
    <div class="control">
      <%= f.text_field :email, class: "input is-rounded" %>
    </div>
    <%- if @user.errors[:email].any? %>
      <div class="help is-danger">
        <%= @user.errors[:email].first %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label"  %>
    <div class="control">
      <%= f.password_field :password, class: "input is-rounded" %>
    </div>
    <%- if @user.errors[:password].any? %>
      <div class="help is-danger">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "label" %>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input is-rounded" %>
    </div>
  </div>

  <%= f.submit class: "button is-primary"%><br>
<% end %>

<%= google_sign_in_button image_tag('google_logo.png', alt: 'Google'), proceed_to: create_login_url %>